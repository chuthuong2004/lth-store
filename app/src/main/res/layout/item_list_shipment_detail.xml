<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@drawable/line_top_bigger"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txt_name_user_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_baseline_account_circle_24"
        android:drawablePadding="5dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/is_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="(Mặc định)"
        android:visibility="gone"
        android:textColor="@color/pink"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_name_user_personal"
        app:layout_constraintStart_toEndOf="@+id/txt_name_user_personal"
        app:layout_constraintTop_toTopOf="@+id/txt_name_user_personal"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_remove_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="Xóa"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/txt_name_user_personal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_name_user_personal"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_edit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="Sửa"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/txt_name_user_personal"
        app:layout_constraintEnd_toStartOf="@+id/txt_remove_address"
        app:layout_constraintTop_toTopOf="@+id/txt_name_user_personal"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_number_phone_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/line_top"
        android:drawableLeft="@drawable/ic_baseline_phone_in_talk_24"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_user_personal"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_address_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_top"
        android:drawableLeft="@drawable/ic_home_bottom_navigation"
        android:drawablePadding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_number_phone_personal"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>