<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
android:layout_height="wrap_content"
android:layout_margin="10dp"
android:padding="5dp"
app:cardCornerRadius="5dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED">

    <ImageView
        android:id="@+id/all_img"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/milk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/all_discount"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/text_view_bg_circle"
        android:fontFamily="@font/amethysta"
        android:gravity="center"
        android:padding="6dp"
        android:text="-95%"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_favorite_24"
        android:background="@drawable/image_view_bg_circle"
        app:layout_constraintBottom_toBottomOf="@+id/all_img"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/all_product_name"
        android:layout_width="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingEnd="2dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amethysta"
        android:text="Product Name"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_img" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/all_product_name"
        app:layout_constraintStart_toStartOf="@+id/all_product_name"
        app:layout_constraintTop_toBottomOf="@+id/all_product_name">

        <TextView
            android:id="@+id/current_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:foreground="@drawable/strikethrough_foreground"
            android:text="100.000đ"
            android:layout_marginStart="5dp"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amethysta"
            android:text="20.000đ"
            android:layout_marginEnd="5dp"
            android:textColor="@color/pink"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>