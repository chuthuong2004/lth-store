<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/line_bottom"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_cart_item_payment"
        android:layout_width="60dp"
        android:src="@drawable/milk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cart_item_name_payment"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/cart_item_name_payment"
        android:layout_width="330dp"
        android:layout_height="21dp"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/amethysta"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:padding="3dp"
        android:text="Áo khoác hoodie xịn xò sang xịn mịn"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_cart_item_payment"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title_color_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/amethysta"
        android:paddingTop="5dp"
        android:text="Giá: "
        android:textColor="@color/grey"
        android:textSize="10dp"

        app:layout_constraintStart_toEndOf="@+id/img_cart_item_payment"
        app:layout_constraintTop_toBottomOf="@+id/cart_item_name_payment"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/cart_item_payment_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/amethysta"
        android:paddingTop="5dp"
        android:text="450.000đ"
        android:textColor="@color/grey"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_color_card"
        app:layout_constraintStart_toEndOf="@+id/title_color_card"
        app:layout_constraintTop_toTopOf="@+id/title_color_card"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/amethysta"
        android:paddingTop="2dp"
        android:text="Màu: "
        android:textColor="@color/grey"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_cart_item_payment"
        app:layout_constraintTop_toBottomOf="@+id/title_color_card"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cart_item_payment_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amethysta"
        android:paddingTop="2dp"
        android:text="Xanh lá"
        android:textColor="@color/grey"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/title_color_card"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amethysta"
        android:paddingTop="2dp"
        android:text="Size: "
        android:textColor="@color/grey"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_item_payment_color"
        app:layout_constraintEnd_toStartOf="@+id/cart_item_payment_size"
        app:layout_constraintTop_toBottomOf="@+id/cart_item_payment_price"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cart_item_payment_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/amethysta"
        android:paddingTop="2dp"
        android:text="XL"
        android:textColor="@color/grey"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_view6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="x "
        android:textColor="@color/grey"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_item_payment_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.982"
        app:layout_constraintStart_toEndOf="@+id/cart_item_payment_price"
        app:layout_constraintTop_toTopOf="@+id/cart_item_payment_price"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cart_item_payment_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_item_payment_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toEndOf="@+id/text_view6"
        app:layout_constraintTop_toTopOf="@+id/text_view6"
        app:layout_constraintVertical_bias="0.75"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>